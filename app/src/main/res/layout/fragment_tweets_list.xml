<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rakesh.tweetz.fragments.TweetsListFragment">

        <ListView
            android:id="@+id/lvTweets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabComposeTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_large"
        android:clickable="true"
        app:srcCompat="@drawable/ic_feather"
        app:layout_anchor="@id/lvTweets"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
